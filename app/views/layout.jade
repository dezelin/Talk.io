// Jade

!!!

html(lang='en')
  head
    meta(charset='utf-8')
    title Talk.io
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Talk.io teleconferencing web application')
    meta(name='author', content='Aleksandar Dezelin')

    block head

    block links
      link(rel='stylesheet', href='/stylesheets/reset.css')
      link(rel='stylesheet', href='/bootstrap/docs/assets/css/bootstrap.css')
      link(rel='stylesheet', href='/bootstrap/docs/assets/css/bootstrap-responsive.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
      link(rel='shortcut icon', href='/favicon.ico')

      // [if lt IE 9]>
      script(src='/javascripts/html5shiv.js')
      script(src='/javascripts/ie9.js')
      // ![endif]

  body
    .container
      header
        .masthead
          h3.muted Talk.io

        block header
        
        nav
          .navbar
            .navbar-inner
              .container
                ul.nav
                  li.active 
                    a(href='#') Home
                  li
                    a(href='#') About
                  li
                    a(href='#') Contact

                  
          block navigation
    
      block featured
      block body
      block extras
    
      footer
        block footer

        .legal
            ul.pull-left.inline
              li 
                a(href='#') Terms of service
              li 
                a(href='#') Privacy
              li
                a(href='#') Security

            p.pull-right &copy; Talk.io headquarters 2012

        block copyright

    block scripts
      script(src='/jquery/jquery.min.js')
      script(src='/angular/angular.js')
      script(src='/bootstrap/docs/assets/js/bootstrap.min.js')
